<Project>
  <!-- Main configuration -->
  <PropertyGroup>
    <LangVersion>13</LangVersion>
    <Nullable>enable</Nullable>
    <UseArtifactsOutput>true</UseArtifactsOutput>
    <Product>$(MSBuildProjectName)</Product>
    <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
  </PropertyGroup>
  <!-- Substitute full path to project directory with ./, hiding it from debug symbols. -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <PathMap>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)'))=./</PathMap>
  </PropertyGroup>
  <!-- Custom props -->
  <PropertyGroup>
    <!-- https://learn.microsoft.com/en-us/nuget/concepts/package-versioning?tabs=semver20sort#version-ranges -->
    <RuntimeDetourVersion>[25.*,)</RuntimeDetourVersion>
    <!-- TODO: needs to work with 21.12.13.1 -->
  </PropertyGroup>
</Project>
